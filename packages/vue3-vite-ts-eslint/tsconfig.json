{
  "compilerOptions": {
    "incremental": true,
    "noUnusedLocals": true, 
    "noUnusedParameters": true,
    "target": "esnext",
    "types": [
      "pinia-plugin-persist"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "presets"
  ],
  "exclude": ["node_modules", "dist"]
}
